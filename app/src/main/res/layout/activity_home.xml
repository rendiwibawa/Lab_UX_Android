<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.HomeActivity"
    android:background="#282B30"
    android:orientation="vertical">

<!--    Menu-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonProfile"
            android:text="Ke Profile NGAB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/buttonItemPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ke Item Page NGAB"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:gravity="center"
            android:text="GeeksforGeeks"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10pt">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#282B30">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14pt"
                android:text="Welcome"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/poppins_bold"
                android:id="@+id/welcome"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On Sale Items"
                android:textColor="#7289DA"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="8dp"
                android:textSize="10pt"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="#282B30"
                android:gravity="center">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="36dp"
                    android:src="@drawable/prev"
                    android:layout_gravity="center"
                    android:id="@+id/prev"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="260dp"
                    android:layout_height="147dp"
                    app:cardBackgroundColor="#282B30"
                    app:cardCornerRadius="20dp">
                        <ViewFlipper
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/carousel"
                            android:flipInterval="3000"
                            android:autoStart="true"
                            android:inAnimation="@anim/slide_in_right"
                            android:outAnimation="@anim/slide_out_left"
                            android:background="@drawable/carousel_border"/>
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="36dp"
                    android:src="@drawable/next"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/next"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trending Items"
                android:textColor="#7289DA"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginTop="30dp"
                android:textSize="10pt"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/trendingItems">
                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions"
                    android:textColor="#7289DA"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="10pt"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"

                    android:orientation="vertical"
                    android:background="#282B30">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#424549">
                        <com.google.android.material.tabs.TabLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tabLayout"
                            app:tabBackground="@color/black"
                            app:tabTextColor="@color/white"
                            app:tabIndicatorColor="#7289DA"
                            app:tabMode="fixed"
                            app:tabGravity="fill"
                            app:tabIndicatorGravity="stretch"
                            app:tabIndicatorAnimationMode="elastic"
                            app:tabIndicator="@drawable/tab_indicator">
                        </com.google.android.material.tabs.TabLayout>

                        <androidx.viewpager2.widget.ViewPager2
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:background="#424549"
                            android:id="@+id/viewPager"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>