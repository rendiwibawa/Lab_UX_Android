<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".ItemPage.MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/img"
            android:layout_gravity="center"
            android:layout_width="168dp"
            android:layout_height="168dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="312dp"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:background="@drawable/background_white">

            <TextView
                android:id="@+id/emailUser"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/purple"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_bold"
                android:text="Rendi Prayata"/>
            <LinearLayout
                android:layout_marginTop="0dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="264dp"
                    android:background="@drawable/textfiled"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="19dp"
                        android:background="@drawable/emailimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background="@color/purple"
                        />

                    <TextView
                        android:fontFamily="@font/poppins_medium"
                        android:id="@+id/email"
                        android:textColor="#333333"
                        android:textSize="12dp"
                        android:layout_marginLeft="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="User@Gmail.com"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="264dp"
                    android:background="@drawable/textfiled"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="19dp"
                        android:background="@drawable/jobsimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background="@color/purple"
                        />

                    <TextView
                        android:textSize="12dp"
                        android:layout_marginLeft="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#333333"
                        android:text="Game Developer"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="264dp"
                    android:background="@drawable/textfiled"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="19dp"
                        android:background="@drawable/locationimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background="@color/purple"
                        />

                    <TextView
                        android:textSize="12dp"
                        android:layout_marginLeft="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#333333"
                        android:text="Jl.California Barat No.123"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="264dp"
                    android:background="@drawable/textfiled"
                    android:layout_height="40dp">

                    <ImageView
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="19dp"
                        android:background="@drawable/contactimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background="@color/purple"
                        />

                    <TextView
                        android:textSize="12dp"
                        android:layout_marginLeft="11dp"
                        android:textColor="#333333"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+1624255362"/>
                </LinearLayout>

                <Button
                    android:id="@+id/logoutButton"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="44dp"
                    android:background="@drawable/carousel_border"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Log Out"
                    android:textAllCaps="false"
                    android:textSize="12sp"

                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>